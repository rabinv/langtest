{
  "name": "LangTest",
  "version": "1.0",
  "description": "Make language tests out of webpages.",
  "background_page": "background.html",
  "options_page": "options.html",
  "icons": { "128" : "128.png", "48": "48.png" },
  "browser_action": {
    "default_icon": "19.png",
    "name": "Start LangTest on selected text"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery-1.4.4.min.js", "words.js"],
      "css": ["style.css"]
    }
  ],
  "permissions": [
    "tabs", "http://*/*"
  ]
}
